{
  "name": "pizza4/sistema",
  "description": "Sistema de gestión de pizzería MVC",
  "type": "project",
  "require": {
      "vlucas/phpdotenv": "^5.6",
      "tecnickcom/tcpdf": "^6.7",
      "resend/resend-php": "^0.6.0",
      "phpmailer/phpmailer": "^6.9"
  },
  "require-dev": {
      "phpunit/phpunit": "^11.0"
  },
  "autoload": {
      "classmap": [
          "app/Models",
          "app/Controllers",
          "app/core"
      ]
  },
  "autoload-dev": {
      "classmap": [
          "tests"
      ]
  },
  "scripts": {
      "test": "vendor/bin/phpunit",
      "start": "php -S localhost:8080 -t public"
  }
}